{
  "name": "authforge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build --turbopack",
    "postinstall": "prisma generate --no-engine && prisma migrate deploy",
    "start": "next start",
    "lint": "eslint",
    "seed": "prisma migrate reset && ts-node prisma/seed.ts",
    "seed:force": "prisma migrate reset --force && ts-node prisma/seed.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@react-email/render": "^1.4.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.0",
    "jose": "^6.1.0",
    "mailgun.js": "^9.0.0",
    "next": "15.5.4",
    "rate-limiter-flexible": "^8.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.46.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/ui": "^4.0.2",
    "eslint": "^9.36.0",
    "eslint-config-next": "15.5.4",
    "jsdom": "^27.0.1",
    "prisma": "^6.16.3",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^4.0.2"
  }
}
